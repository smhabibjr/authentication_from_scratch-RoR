<div class="container">
  <p>Sign up</p>

  <%= form_with model: @new_user, url:signup_path do |f| %>
  <p>
    <%= f.label 'First name' %> <br>
    <%= f.text_field :f_name %>
  </p>
    <p>
      <%= f.label 'Last name' %> <br>
      <%= f.text_field :l_name %>
    </p>

    <p>
      <%= f.label 'Email' %> <br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label 'Password' %> <br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label 'Password Confirmation' %> <br>
      <%= f.password_field :password_confirmation %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>

</div>
